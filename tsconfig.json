{
  "compilerOptions": {
    "target": "es2020",
    "lib": ["DOM", "DOM.Iterable", "esnext"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "module": "esnext",
    "strict": true,
    "noImplicitAny": false,
    "verbatimModuleSyntax": true,
    "skipDefaultLibCheck": true,
    "declaration": true,
    "outDir": "dist"
  },
  "include": ["src/**/*.ts"],
  "exclude": ["src/**/*.test.ts"]
}
